Algoritmo Nombre_Edad
	
	Definir v_nombre Como Caracter;
	Definir v_edad Como Entero;
	
	// Escribir, Escribir sin saltar
	Escribir Sin Saltar "Ingrese su nombre: "
	Leer v_nombre // Pedro
	Escribir Sin Saltar "Ingrese su edad: "
	Leer v_edad // 27
	
	Escribir "Su nombre es: ", v_nombre, " y su edad es: ", v_edad;
	// Su nombre es: Pedro y sue edad es: 27
	
	
FinAlgoritmo
